{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "deno run -A vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@/": "./",
    "@babylonjs/core": "npm:@babylonjs/core@^8.42.0",
    "@babylonjs/gui": "npm:@babylonjs/gui@^8.42.0",
    "@babylonjs/procedural-textures": "npm:@babylonjs/procedural-textures@^8.42.0",
    "@deno/gfm": "jsr:@deno/gfm@^0.11.0",
    "@fastify/env": "npm:@fastify/env@^5.0.3",
    "@preact-signals/utils": "npm:@preact-signals/utils@^0.23.1",
    "@preact/signals-core": "npm:@preact/signals-core@^1.12.1",
    "@prisma/client": "npm:@prisma/client@^7.2.0",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.19",
    "@types/earcut": "npm:@types/earcut@^3.0.0",
    "daisyui": "npm:daisyui@^5.5.14",
    "dotenv": "npm:dotenv@^17.2.3",
    "earcut": "npm:earcut@^3.0.2",
    "fastify-cors": "npm:fastify-cors@^6.1.0",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "pino-pretty": "npm:pino-pretty@^13.1.3",
    "preact": "npm:preact@^10.28.0",
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "prisma": "npm:prisma@^7.2.0",
    "uuid": "npm:uuid@^13.0.0",
    "vite": "npm:vite@^7.3.0",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.18",
    "vite-plugin-run": "npm:vite-plugin-run@^0.6.1",
    "vite-plugin-wasm": "npm:vite-plugin-wasm@^3.5.0",
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
