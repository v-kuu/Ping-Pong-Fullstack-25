---
import Base from "@/src/layouts/Base.astro";
import { Signup } from "@/islands/Signup.tsx";
---

<Base title="Sign Up" active="/signup" class="vt323-regular flex flex-col items-center justify-center min-h-screen bg-gray-900">
  <div class="w-full max-w-md p-8 bg-white rounded shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-black">Gi'mme the Deeds</h2>
    <Signup client:load /> // RABBIT: client:load forces hydration immediately on page load, which can delay First Contentful Paint. Consider using client:idle for non-critical interactivity.
  </div>
</Base>
