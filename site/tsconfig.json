{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": [
      "astro/client",
      "bun-types",
      "@astrojs/db"
    ],
  },
  "include": [".astro/types.d.ts",
    "src/**/*",
    "components/**/*",
    "islands/**/*",
    "db/**/*"
  ],
  "exclude": ["node_modules", "dist"],
}
